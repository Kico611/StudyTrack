<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profilna slika -->
        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_rounded_image"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerInside"
            android:padding="16dp" />

        <!-- Ime i prezime -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ime i Prezime"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- KorisniÄko ime -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@korisnickoime"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="16dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Datum registracije -->
        <TextView
            android:id="@+id/registrationDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum registracije: 01.01.2025"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp"/>

        <!-- Gumb za promjenu lozinke -->
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promijeni lozinku"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_rounded_button" />

        <!-- Gumb za odjavu -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Odjavi se"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_logout"
            android:padding="12dp"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
