<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_rounded_popup"
    android:elevation="8dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/examSubjectDisplayTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="Predmet"
        android:background="@drawable/bg_rounded_edittext"
        android:padding="14dp"
        android:textColor="#212121"
        android:textColorHint="#8A8A8A"
        android:textSize="16sp"
        android:inputType="textCapWords"
        android:layout_marginBottom="8dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/subjectsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <EditText
        android:id="@+id/examDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Datum ispita"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        android:background="@drawable/bg_rounded_edittext"
        android:padding="14dp"
        android:textColor="#212121"
        android:textColorHint="#8A8A8A"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/examNotesEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="BiljeÅ¡ke"
        android:background="@drawable/bg_rounded_edittext"
        android:padding="14dp"
        android:textColor="#212121"
        android:textColorHint="#8A8A8A"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:minLines="3" />

</LinearLayout>
